
#include<bits/stdc++.h>
#define ll  long long
using namespace std;
int main(){
    int tc; cin>>tc;
    while(tc--){
        long long n, b=0;
        cin>>n;
        if(n<3)    cout<<"0\n";
        else{
            if(n%2==0){
                b= ((n*n)/2)-2;
                cout<<b<<"\n";
            }
            else{
                b = (n*n)/2;
                cout<<b<<"\n";
            }
        }
    }
    return 0;
}
